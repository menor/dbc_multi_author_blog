<div class="container">
  <h1>Welcome to Blogorama!</h1>
  <ul>
    <% @posts.each do |post|%>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <hr/>
    </li>
    <% end %>
  </ul>
</div>
<div class="container button">
  <a href="/posts/new">Share your thoughts</a>
</div>