<div class="container">
  <h1>Welcome to Blogorama!</h1>
  <ul>
    <% @posts.each do |post|%>
    <li>
      <h2><a href="/posts/<%= post.id %>"><%= post.title %></a></h2>
      <p><%= post.content %></p>
      <hr/>
    </li>
    <% end %>
  </ul>
</div>
<div class="container">
  <h2>Browse by tag:</h2>
    <% @tags.each do |tag|%>
      <a class="tagcloud" href="/tags/<%= tag.id %>"><%= tag.name %></a>
    <% end %>
</div>
<div class="container button">
  <h2><a href="/posts/new">Share your thoughts</a></h2>
</div>


